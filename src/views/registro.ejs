<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/cliente.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>GladBakery</title>
</head>

<body>


    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light sticky-top">
            <a class="navbar-brand" href="/default">
                <img id="icon" src="https://image.flaticon.com/icons/svg/1256/1256964.svg" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/admin">Admin</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Realizar Pedido</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Mis Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/default/registro">Registrarse</a>
                            </li>
                        </ul>
            </div>
            <form class="form-inline">
                <span style="padding:5px;"><a class="nav-link" href="/login">Login</a></span>
                <img id="user" src="https://image.flaticon.com/icons/svg/17/17004.svg" />
            </form>
        </nav>

        <div class="btn-group" role="group" aria-label="Basic example">
            <button id="mostrar-formulario-cliente" type="button" class="btn btn-primary" data-context="listar">Listar</button>
        </div>

        <hr />


        <form id="formulario-registro-cliente">
           <fieldset>
               <legend>Datos Personales</legend>
               <div>
                    <div class="form-group row">
                            <label for="input-cliente-nombre" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-cliente-nombre" name="nombre" placeholder="Nombre">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="input-cliente-apellido" class="col-sm-2 col-form-label">Apellido</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-cliente-apellido" name="apellido" placeholder="Apellido">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="input-cliente-edad" class="col-sm-2 col-form-label">Edad</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" id="input-cliente-edad" name="edad" placeholder="Edad">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="input-cliente-email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="input-cliente-email" name="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="input-cliente-telefono" class="col-sm-2 col-form-label">Telefono</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-cliente-telefono" name="telefono" placeholder="Telefono">
                            </div>
                        </div>
               </div>
           </fieldset>
           <fieldset>
                <legend>Direccion</legend>
                <div>
                     <div class="form-group row">
                             <label for="input-cliente-nombre" class="col-sm-2 col-form-label">Sector</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="input-cliente-nombre" name="nombre" placeholder="Nombre">
                             </div>
                         </div>
                         <div class="form-group row">
                             <label for="input-cliente-apellido" class="col-sm-2 col-form-label">Calle</label>
                             <div class="col-sm-10">
                                 <input type="text" class="form-control" id="input-cliente-apellido" name="apellido" placeholder="Apellido">
                             </div>
                         </div>
                         <div class="form-group row">
                                <label for="input-cliente-apellido" class="col-sm-2 col-form-label">Numero</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input-cliente-apellido" name="apellido" placeholder="Apellido">
                                </div>
                            </div>
                            <div class="form-group row">
                                    <label for="input-cliente-apellido" class="col-sm-2 col-form-label">Referencia</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="input-cliente-apellido" name="apellido" placeholder="Apellido">
                                    </div>
                                </div>
                </div>
            </fieldset>
            <div style="padding-top: 5px; text-align: right">
                    <button class="btn btn-danger" id="button-cliente-gardar">Cancelar</button>
                    <button class="btn btn-success" id="button-cliente-cancelar">Guadar</button>
            </div>
        </form>
        <hr>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="formulario-cliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Registro de Clientes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.dataTables.min.js"></script>
    <script src="/js/cliente.js"></script>
</body>

</html